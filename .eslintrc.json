{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:eqeqeq-fix/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "quotes": ["warn", "double"],
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "wrap-iife": ["error", "inside"],
        "space-before-function-paren": "off",
        "no-unused-vars": "warn",
        "brace-style": ["warn", "stroustrup"],
        "object-curly-spacing": ["warn", "never"], 
        "block-spacing": ["warn", "never"],
        "arrow-parens": ["warn", "as-needed"]
    }
}
